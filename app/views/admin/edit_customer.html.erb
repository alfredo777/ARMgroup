<h1>Crear Cliente</h1>
<%= form_tag admin_update_customer_path(id: @customer.id), multipart: true do -%>
<div class="form-group">
  <b>Logo</b>
  <%= image_tag(@customer.logo, width: "200px") if !@customer.logo.nil?%>
  <%= file_field_tag 'logo' %></br>
  <b>Avatar</b>
  <%= image_tag(@customer.avatar, width: "200px") if !@customer.avatar.nil?%>
  <%= file_field_tag 'avatar' %><br/>
  <%= text_field_tag "email", @customer.email, class:"form-control", placeholder: "Ingresa el Email"%><br/>
  <%= password_field_tag "password", "", class:"form-control", placeholder: "Ingresa la contraseÃ±a"%><br/>
  <%= text_field_tag "route_files", @customer.route_files, class:"form-control", placeholder: "Ingresa ruta para archivos de audio."%><br/>
  <%= text_field_tag "empresa", @customer.empresa, class: "form-control", placeholder: "Ingresa el nombre de la empresa a la que pertenece"%><br/>
  <%= text_field_tag "idempresa", @customer.idempresa, class: "form-control", placeholder: "Identificador empresa que pertenece" %><br/>
  <%= text_field_tag "name", @customer.name, class: "form-control", placeholder: "Nombre"%><br/>
  <%= text_field_tag "submname", @customer.submname, class: "form-control", placeholder: "Apellidos"%><br/>
  <%= submit_tag "Actualizar Cliente", class: "btn btn-info pull-right" %>
</div>
<%end%>