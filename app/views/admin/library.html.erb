<div class="row">
  <div class="col-md-9">
    <%= form_tag "/admin/files_add/#{params[:id]}", class: "remote-form", multipart: true do -%>
              <pre>
       <div class="col-md-6"> <%= file_field_tag "file"%></div>
       <div class="col-md-4"> <%= submit_tag "Guardar Archivo", class: "btn btn-primary btn-large" %></div>
    </pre>
    <%end%>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <% @files.each do |f| %>
    <%= render partial: 'admin/file', locals: {f: f, permited: true} %>
    <%end%>
    
  </div>
  <center><%= will_paginate @files, renderer: BootstrapPagination::Rails %></center>
</div>
<script type="text/javascript">
$(document).ready(function(){
sendForm();
});
</script>