<h1>Publicaciones del sistema</h1>
<%= link_to new_publication_path, class: "btn btn-info pull-right" do%>
  Nueva publicación <i class="fa fa-pencil" aria-hidden="true"></i>
<%end%>
<br/><br/>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Título</th>
            <th>Creador</th>
            <th>Imagen Principal URL</th>
            <th colspan="3">Opcciones</th>
          </tr>
        </thead>
        <tbody>
          <% @publications.each do |publication| %>
          <tr>
            <td><%= publication.title %></td>
            <td><%= publication.admin_id %></td>
            <td><%= publication.head_image %></td>
            <td><%= link_to 'Ver', publication %></td>
            <td><%= link_to 'Editar', edit_publication_path(publication), data: { no_turbolink: true } %></td>
            <td><%= link_to 'Destruir', publication, method: :delete, data: { confirm: '¿Estas seguro de elminar esta publicación?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>