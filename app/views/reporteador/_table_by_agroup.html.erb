<% random_x = SecureRandom.hex(10)%>
<div class="row">
	<div class="col-lg-12">
		<div class="col-md-6">
			<table class="table">
				<caption><h3>Agrupamiento por <%= variable %></h3></caption>
				<thead>
					<tr>
						<% data[:arrayIN].each do |d| %>
						<th><%= d[0] %></th>
						<%end%>
					</tr>
				</thead>
				<tbody>
					<tr>
						<% data[:arrayIN].each do |d| %>
						<td><%= (d[1] * 100).round(2) %> %</td>
						<%end%>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-md-6"> 
			<div id="chart-pie-<%=random_x%>" data-target="<%=chart_data%>"></div>
		</div>
	</div>
</div>
<script type="text/javascript" charset="utf-8" >
$(document).ready(function(){
var pie = $("#chart-pie-<%=random_x%>").attr('data-target');
var pie_eval = eval(pie);
console.log(pie_eval);
PIEChart(pie_eval, "chart-pie-<%=random_x%>");
});
</script>